<h1 class="h2 mb-3">Chỉnh sửa lớp</h1>

{{#if message}}
<div class="alert alert-{{messageType}}" role="alert">
{{{message}}}
</div>
{{/if}}

<form action="/classrooms/edit/{{classroom.id}}" method="post">
  <div class="mb-3">
    <label for="grade" class="form-label">Khối lớp</label>
    <input id="grade" type="text" name="grade" class="form-control" value="{{classroom.grade}}" />
  </div>
  <div class="mb-3">
    <label for="name" class="form-label">Tên lớp</label>
    <input id="name" type="text" name="name" class="form-control" value="{{classroom.name}}" />
  </div>

  <div class="mb-4">
    <label for="year" class="form-label">Niên khoá</label>
    <input id="year" type="text" name="year" class="form-control" value="{{classroom.year}}" />
    <div class="form-text">Chỉ nhập năm bắt đầu</div>
  </div>

  <button type="submit" class="btn btn-primary">Chỉnh sửa lớp</button>

</form>