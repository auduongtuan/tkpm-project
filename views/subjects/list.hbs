<div class="d-inline-flex align-items-center mb-4">
<h1 class="h2">Danh sách lớp học</h1>
<a href="/subjects/create" class="btn btn-primary btn-sm ms-4">Tạo môn học</a>
</div>


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Tên môn học</th>
      <th scope="col" class="text-center">Hành động</th>
    </tr>
  </thead>
  <tbody>
    {{#each subjects}}
    <tr>
      <td>{{name}}</td>
      <td class="text-center">
        <a class="btn btn-outline-secondary btn-sm" href="/subjects/edit/{{id}}">Sửa</a>
        <a class="btn btn-outline-danger btn-sm delete-btn" data-action="/subjects/delete/{{id}}" data-name="môn {{name}}">Xoá</a>
        </td>
    </tr>
    {{/each}}

